import express from 'express';
import <%= resourceNameSingular %>Controllers from '../controllers/<%= resourceNameSingular %>.controller.js';

const router = express.Router();

// Define las rutas para el recurso.

// Ruta para crear un nuevo recurso.
router.post('/', <%= resourceNameSingular %>Controllers.create);

// Ruta para obtener un recurso por su ID.
router.get('/:id', <%= resourceNameSingular %>Controllers.getOne);

// Ruta para obtener todos los recursos.
router.get('/', <%= resourceNameSingular %>Controllers.getAll);

// Ruta para actualizar parcialmente un recurso.
router.patch('/:id', <%= resourceNameSingular %>Controllers.update);

// Ruta para reemplazar completamente un recurso.
router.put('/:id', <%= resourceNameSingular %>Controllers.replace);

// Ruta para eliminar un recurso.
router.delete('/:id', <%= resourceNameSingular %>Controllers.delete);

export default router;

