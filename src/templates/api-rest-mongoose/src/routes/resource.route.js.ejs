import express from 'express';
import <%= resourceNamePascal %>Controller from '../controllers/<%= resourceNameSingular %>.controller.js';

const router = express.Router();

// Define las rutas para el recurso.

// Ruta para obtener todos los recursos.
router.get('/', <%= resourceNamePascal %>Controller.getAll);

// Ruta para obtener un recurso por su ID.
router.get('/:id', <%= resourceNamePascal %>Controller.getById);

// Ruta para crear un nuevo recurso.
router.post('/', <%= resourceNamePascal %>Controller.create);

// Ruta para actualizar un recurso.
router.put('/:id', <%= resourceNamePascal %>Controller.update);

// Ruta para eliminar un recurso.
router.delete('/:id', <%= resourceNamePascal %>Controller.delete);

export default router;

